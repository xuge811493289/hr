import localS from '@/store/localStorage';
localS.local();  //执行本地存储。
let Base64 = require('js-base64').Base64;//导入加密算法
let flag = 0;
import cg from '../store/configure.js';
var bp = cg.bp;
let url = bp+'/Login/Index';

export default {  //必须暴露，否则警告。
	name : 'Login',
	data(){
		return {
      fw:'0px',
			img1:logo,
			loginForm:{},
      rules:{
        user:[
          {required:true,message:'请输入用户名',trigger: 'blur'},
        ],
        passwd:[
